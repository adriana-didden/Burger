<div class="container">
    <div class="row">
        <h1>Fresh Burgers</h1>
        <img src="./assets/images/burger.png" style=width:100px>
    </div>

    <div class="row">
        <div class="column">
            <h1>eat-da-burger</h1>

            <ul class="float-left">
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{burger_name}}
                        <button class='devoured btn btn-success' value={{id}}>eat-da-burger</button>
                    </p>

                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="column">

            <h1>😞Devoured</h1>
            <ul class="float-left">
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}</p>

                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div class="row">

        <div>
            <form id='newBurger' action="/" method="POST">
                <input id="burgerName" type="text" name="burgerDevoured"></input>

                <button class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>