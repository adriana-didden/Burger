<div class="container">
    <div class="row ">
        <div class="col text-center">
            <img src="./assets/images/burger.png" style="width:300px">
        </div>
    </div>
    <br>
    <div class="row">
        <div class="col">
            <h1>eat-da-burger</h1>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                <li>
                    <p>{{burger_name}}
                        <button class='devoured btn btn-success' value={{id}}>eat-da-burger</button>
                    </p>
                </li>
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col">
            <h1>😞Devoured</h1>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                <li>
                    <p>{{burger_name}}</p>

                </li>
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
    <div id="form" class="row text-center">
        <div class="col justify-content-center">
            <form id='newBurger' action="/" method="POST">
                <input id="burgerName" type="text" name="burgerDevoured"></input>

                <button class="btn btn-success" type="submit">Submit</button>
            </form>
        </div>
    </div>
</div>